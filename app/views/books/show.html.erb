<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <% if current_user != @user %>
        <%= render 'users/others_info' , user: @user %>
      <% else %>
        <%= render 'users/info' , user: @user %>
      <% end %>

      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @new_book %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image, size:"100x100" %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <% if @book.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success edit_book_#{@book.id}" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@book.id}"%></td>
          <% end %>

          <%= render 'favorites/favorite', book: @book %>

          <td>コメント数：<%= @book.book_comments.count %></td>
        </tr>
      </table>

      <table class='table'>
        <% @book.book_comments.each do |book_comment| %>
          <tr>
            <div>
              <td><%= link_to(book_comment.user) do %>
                <%= image_tag book_comment.user.get_profile_image, size:'100x100' %><br>
                <%= book_comment.user.name %>
                <% end %>
              </td>
              <td><%= book_comment.comment %></td>
              <td>
                <% if book_comment.user == current_user %>
                  <%= link_to "削除", book_book_comment_path(book_comment.book, book_comment), method: :delete %>
                <% end %>
                </td>
            </div>
          </tr>
        <% end %>
      </table>
      <div>
        <%= form_with model: [@book, @book_comment] do |f| %>
          <%= f.text_area :comment, rows: '5',  placeholder: "コメントをここに", class: "w-100" %>
          <%= f.submit "送信する" %>
        <% end %>
      </div>
    </div>
  </div>
</div>